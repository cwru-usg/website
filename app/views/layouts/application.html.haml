!!!
%html
  %head
    %title USG
    =stylesheet_link_tag "application", :media => "all"
    %link{:href => "http://fonts.googleapis.com/css?family=Habibi|Open+Sans:400,300,700", :rel => "stylesheet", :type => "text/css"}
    =javascript_include_tag "application"
    =csrf_meta_tags
    :javascript
      $(function(){
        $("body").noisy({
          opacity: 0.07
        });
      });
  %body
    .body-container
      =render "layout_partials/header"
      #container.logo
        #logo
          =image_tag "logo.png"
          %h1
            =link_to "Undergraduate Student Government", root_url
      -if !flash.empty?
        #container
          -flash.each do |name, msg|
            - if msg.is_a?(String)
              #flash(class=name)= raw(msg)
      #container
        =yield
      .body-container-push
    =render "layout_partials/footer"
